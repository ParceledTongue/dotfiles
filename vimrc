" vim-plug                                                                      
call plug#begin()
Plug 'dracula/vim'
call plug#end()

" colors
color dracula

" misc.
set tabstop=4
set softtabstop=0
set expandtab
set shiftwidth=2
set smarttab
set backspace=indent,eol,start
set number
set cursorline
set showmatch
set incsearch

